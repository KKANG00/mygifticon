        <script>
          $("#buyBtn").click(function(){
            var totalamt = 10000;
            //$('#totalamt').text(); 이렇게 해서 받아오고싶은뎅
            console.log(totalamt);

            $.ajax({
              url:'/payment',
              type : 'POST',
              data : {
                  amount : totalamt,
              },
              success:function(data){
                      alert(totalamt);
                      window.location.href = '/payment'
              }
            })
          })
      </script>

  </body>

  <script>
    $('#buy').click(function(){
      var price = 10000;
      var finUseNum = 'dsf';
      $.ajax({
                url:'/payment/withdraw',
            type : 'POST',
            headers : {
               'ourtoken' : sessionStorage.getItem('jwtToken')
            },
                data : {
               amount : price,
               fin_use_num : finUseNum
                },
                success:function(data){
                if(data == 1){
                   alert('결재완료')
                }
                else {
                  alert(data);
                }
                }
            })     
      });   
  </script>
